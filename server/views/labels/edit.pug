
extends ../layout.pug

block content
  h1= t('labels.index.edit') + ' ' + t('labels.index.name')
  if error && error.length
    each msg in error
      div.alert.alert-danger.mt-3(style='width: 60%; margin: 0 auto;')= msg
  form(action=`/labels/${label.id}?_method=PATCH`, method='POST')
    .mb-3
      label.form-label(for='data_name')= t('labels.index.name')
      input.form-control(type='text', name='data[name]', id='data_name', minlength='1', value=label.name, aria-label=t('labels.index.name'))
    .mb-3
      label.form-label(for='description')= t('labels.index.description')
      textarea.form-control(id='description', name='description')= label.description || ''
    button.btn.btn-primary(type='submit')= t('labels.index.edit')
