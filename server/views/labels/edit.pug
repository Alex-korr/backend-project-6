
extends ../layout.pug

block content
  h1= t('users.index.Edit') + ' ' + t('layouts.application.labels')
  if error && error.length
    each msg in error
      div.alert.alert-danger.mt-3(style='width: 60%; margin: 0 auto;')= msg
  form(action=`/labels/${label.id}?_method=PATCH`, method='POST')
    .mb-3
      label.form-label(for='name')= t('labels.index.name')
      input.form-control(type='text', name='data[name]', id='name', required, minlength='1', value=label.name)
    button.btn.btn-primary(type='submit')= t('statuses.index.save')
