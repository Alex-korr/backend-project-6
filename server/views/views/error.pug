extends layout

block content
  .container.mt-5
    h1.text-danger= t('errors.title', { defaultValue: 'Ошибка' })
    if error && error.length
      each msg in error
        div.alert.alert-danger.mt-3= msg
    else
      div.alert.alert-danger.mt-3 Internal Server Error
    a.btn.btn-primary.mt-4(href='/')= t('errors.backHome', { defaultValue: 'На главную' })
