extends ../layout

block content
  .d-flex.justify-content-center.align-items-center(style='min-height:40vh; margin-top:40px;')
    form(action=`/users/${user.id}`, method='post', class='w-100', style='max-width:330px;padding:15px;margin:auto;')
      if typeof currentLang !== 'undefined' && currentLang === 'ru'
        h1.h3.mb-3.fw-normal.text-center Редактировать
      else
        h1.h3.mb-3.fw-normal.text-center Edit User
      if (typeof error === 'string' && error.trim()) || (Array.isArray(error) && error.length && error[0] && error[0].trim())
        .alert.alert-danger.alert-dismissible.fade.show(role='alert')= Array.isArray(error) ? error[0] : error
      input(type='hidden', name='_method', value='patch')
      .form-floating.mb-3
        if typeof currentLang !== 'undefined' && currentLang === 'ru'
          input.form-control(type='text', name='firstName', id='floatingFirstName', placeholder='Имя', value=user.firstName)
          label(for='floatingFirstName') Имя
        else
          input.form-control(type='text', name='firstName', id='floatingFirstName', placeholder='First Name', value=user.firstName)
          label(for='floatingFirstName') First Name
      .form-floating.mb-3
        if typeof currentLang !== 'undefined' && currentLang === 'ru'
          input.form-control(type='text', name='lastName', id='floatingLastName', placeholder='Фамилия', value=user.lastName)
          label(for='floatingLastName') Фамилия
        else
          input.form-control(type='text', name='lastName', id='floatingLastName', placeholder='Last Name', value=user.lastName)
          label(for='floatingLastName') Last Name
      .form-floating.mb-3
        if typeof currentLang !== 'undefined' && currentLang === 'ru'
          input.form-control(type='email', name='email', id='floatingEmail', placeholder='Email', value=user.email)
          label(for='floatingEmail') Email
        else
          input.form-control(type='email', name='email', id='floatingEmail', placeholder='Email', value=user.email)
          label(for='floatingEmail') Email
      .form-floating.mb-3
        if typeof currentLang !== 'undefined' && currentLang === 'ru'
          input.form-control(type='password', name='password', id='floatingPassword', placeholder='Пароль (оставьте пустым, чтобы не менять)')
          label(for='floatingPassword') Пароль
        else
          input.form-control(type='password', name='password', id='floatingPassword', placeholder='Password (leave blank to keep current)')
          label(for='floatingPassword') Password
      if typeof currentLang !== 'undefined' && currentLang === 'ru'
        button.w-100.btn.btn-lg.btn-primary(type='submit') Изменить
      else
        button.w-100.btn.btn-lg.btn-primary(type='submit') Update