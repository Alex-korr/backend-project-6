extends ../layout

block content
  .d-flex.justify-content-center.align-items-center(style='min-height:40vh; margin-top:40px;')
    form(action=`/users/${user.id}`, method='post', class='w-100', style='max-width:330px;padding:15px;margin:auto;')
      if typeof currentLang !== 'undefined' && currentLang === 'ru'
        h1.h3.mb-3.fw-normal.text-center Редактировать
      else
        h1.h3.mb-3.fw-normal.text-center Edit User
      if (typeof error === 'string' && error.trim()) || (Array.isArray(error) && error.length && error[0] && error[0].trim())
        .alert.alert-danger.alert-dismissible.fade.show(role='alert')= Array.isArray(error) ? error[0] : error
      input(type='hidden', name='_method', value='patch')
      .form-floating.mb-3
        if typeof currentLang !== 'undefined' && currentLang === 'ru'
          input.form-control(type='text', name='firstName', id='data_firstName', placeholder='Имя', value=user.firstName)
          label(for='data_firstName') Имя
        else
          input.form-control(type='text', name='firstName', id='data_firstName', placeholder='First Name', value=user.firstName)
          label(for='data_firstName') First Name
      .form-floating.mb-3
        if typeof currentLang !== 'undefined' && currentLang === 'ru'
          input.form-control(type='text', name='lastName', id='data_lastName', placeholder='Фамилия', value=user.lastName)
          label(for='data_lastName') Фамилия
        else
          input.form-control(type='text', name='lastName', id='data_lastName', placeholder='Last Name', value=user.lastName)
          label(for='data_lastName') Last Name
      .form-floating.mb-3
        if typeof currentLang !== 'undefined' && currentLang === 'ru'
          input.form-control(type='email', name='email', id='data_email', placeholder='Email', value=user.email)
          label(for='data_email') Email
        else
          input.form-control(type='email', name='email', id='data_email', placeholder='Email', value=user.email)
          label(for='data_email') Email
      .form-floating.mb-3
        if typeof currentLang !== 'undefined' && currentLang === 'ru'
          input.form-control(type='password', name='password', id='data_password', placeholder='Пароль (оставьте пустым, чтобы не менять)')
          label(for='data_password') Пароль
        else
          input.form-control(type='password', name='password', id='data_password', placeholder='Password (leave blank to keep current)')
          label(for='data_password') Password
      if typeof currentLang !== 'undefined' && currentLang === 'ru'
        button.w-100.btn.btn-lg.btn-primary(type='submit') Изменить
      else
        button.w-100.btn.btn-lg.btn-primary(type='submit') Update