extends ../layout.pug

block content
  h1= t('statuses.index.createStatus')
  form(action='/statuses', method='POST')
    .mb-3
      label.form-label(for='name')= t('statuses.index.name')
      // Dummy comment for commit
      input.form-control(type='text', name='name', id='name', minlength='1', value=(typeof name !== 'undefined' ? name : ''))
      if errors && errors.length
        .alert.alert-danger.mt-2
          ul.validation-errors(style='list-style: none; padding-left: 0; margin-bottom: 0;')
            each err in errors
              li= err
    button.btn.btn-primary(type='submit')= t('statuses.createSubmit')
