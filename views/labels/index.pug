extends ../layout.pug

block content
  h1 Labels
  a.btn.btn-primary(href="/labels/new") New Label
  if labels && labels.length
    table.table.table-striped.mt-3
      thead
        tr
          th Name
          th Actions
      tbody
        each label in labels
          tr
            td= label.name
            td
              a.btn.btn-sm.btn-outline-secondary(href=`/labels/${label.id}/edit`) Edit
              form(action=`/labels/${label.id}?_method=DELETE`, method="post", style="display:inline;")
                button.btn.btn-sm.btn-danger(type="submit") Delete
  else
    p.text-muted No labels found.
