            .col-md-3.text-end
              .btn-group.me-2(role="group")
                a.btn.btn-sm.btn-primary EN
                a.btn.btn-sm.btn-outline-secondary RU
              a.btn.btn-outline-primary.me-2(href="/session/new") Sign In
              a.btn.btn-primary(href="/users/new") Sign Up
          //- Show global flash messages
          if typeof layoutError !== 'undefined' && layoutError.length
            each msg in layoutError
              div.alert.alert-danger.mt-3= msg
          if typeof layoutSuccess !== 'undefined' && layoutSuccess.length
            each msg in layoutSuccess
              div.alert.alert-success.mt-3= msg
          block content
