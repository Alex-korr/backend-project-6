extends ../layout

block content
  .d-flex.justify-content-center.align-items-center(style='min-height:40vh; margin-top:40px;')
    form(action='/session', method='post', class='w-100', style='max-width:330px;padding:15px;margin:auto;')
      if error && error.length && error[0] && error[0].trim()
        .alert.alert-danger.alert-dismissible.fade.show(role='alert') #{error[0]}
      if success && success.length && success[0] && success[0].trim()
        .alert.alert-success.alert-dismissible.fade.show(role='alert') #{success[0]}
      h1.h3.mb-3.fw-normal.text-center Please sign in
      .form-floating.mb-3
        input.form-control(type='email', name='email', id='floatingInput', placeholder='name@example.com', required)
        label(for='floatingInput') Email address
      .form-floating.mb-3
        input.form-control(type='password', name='password', id='floatingPassword', placeholder='Password', required)
        label(for='floatingPassword') Password
      button.w-100.btn.btn-lg.btn-primary(type='submit') Sign in
      // ...existing code...